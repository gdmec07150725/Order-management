<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>订单查询页面</title>
    <style type="text/css">
        body{
            margin-left: 0;
            margin-top: 0;
        }
        span{
            font-weight: bold;
            color:red;
            font-size:12px;
        }
        ul{
            width:100%;
            display:-moz-box;
            display:-webkit-box;
            /*display:-ms-box;*/
            -moz-box-orient: vertical;
            -webkit-box-orient: vertical;
            -ms-box-orient:vertical;
            margin:0;
            padding:0;
        }
        li{
            list-style:none;
        }
        ul li ul{
            display:-moz-box;
            display:-webkit-box;
            /*display:-ms-box;*/
            -moz-box-orient: horizontal;
            -webkit-box-orient: horizontal;
            /*-ms-box-orient:horizontal;*/
        }
        h1{
            font-size: 14px;
            font-weight:bold;
            color:white;
            background-color:#7088AD;
            text-align: left;
            padding-left: 10px;
            display:block;
            width:100%;
            margin:0;
        }
        li[id^=title]{
            font-size:12px;
            color:#333333;
            background-color: #E6E6E6;
            text-align: right;
            padding-right: 5px;
            width: 110px;
        }
        li[id^=content]{
            height: 22%;
            background-color: #FAFAFA;
            text-align: left;
            padding-left: 2px;
            width: 210px;
        }
        input{
            width: 95%;
            border-top-color:#426c7c;
            border-right-color:#cccccc;
            border-bottom-color: #cccccc;
            border-left-color: #426c7c;
            border:1px solid #0066cc;
            height: 18px;
        }
        div#buttonDiv{
            text-align: left;
            padding-left: 2px;
            width:100%;
        }
        input[type='submit'],input[type='button']{
            font-size: 12px;
            width: 68px;
            height:20px;
            cursor: hand;
            border:none;
            font-family: 宋体;
            background-image:url(../images/but_bg.gif);
            color: white;
        }
        div#infoTable{
            overflow: auto;
            width: 100%;
            height: 100%;
        }
        div#infoTable table{
            width:100%;
            background-color: white;
            cellpadding:1;
            cellspacing:1;
            font-size:12px;
            text-align: center;
        }
        div#infoTable table th{
            height: 22;
            background-color: #7088AD;
            color:#FFF;
            width: 8%;
        }
        div#infoTable table tr{
            height: 30;
        }
        div#infoTable table tr:nth-child(odd){
            background-color: #E6E6E6;
            color:#333333;
        }
        div#infoTable table tr:nth-child(even){
            background-color: #fafafa;
            color:black;

        }
        div#infoTable table tr:nth-child(1){
            background-color: #7088AD;
            color: #FFF;

        }
        header{
            width: 99%;
        }
    </style>
</head>
<body onload="window_onload()">
<section>
    <header id="div_head_title_big">
        <h1>检索订单信息</h1>
    </header>
    <form id="form1" action="/search" method="post">
        <ul>
            <li>
                <ul>
                    <li id="title_1"><label for="tbxCode">订单编号</label></li>
                    <li id="content_1">
                        <input type="text" id="tbxCode" name="code" maxlength="8"/>
                    </li>
                </ul>
                <ul>
                    <li id="title_2"><label for="tbxDate">订单日期</label></li>
                    <li id="content_2">
                        <input type="date" id="tbxDate" name="date" maxlength="10"/>
                    </li>
                </ul>
                <ul>
                    <li id="title_3"><label for="tbxGoodsCode">商品编号</label></li>
                    <li id="content_3">
                      <input type="text" id="tbxGoodsCode" name="goodsCode" maxlength="12"/>
                    </li>
                </ul>
            </li>
        </ul>
        <div id="buttonDiv">
            <input type="submit" name="btnSearch" id="btnSearch" value="检索" onclick="btnSearch_click();"/>
            <input type="button" name="btnNew" id="btnNew" value="新增" onclick="btnNew_click();"/>
            <span id="errMsg"></span>
        </div>
    </form>
    <section>
    </section>
        <header id="div_head_title_big">
            <h1>检索结果</h1>
        </header>
        <div id="infoTable">
            <table id="datatable">
                <tr>
                    <th>订单编号</th>
                    <th>订单日期</th>
                    <th>商品编号</th>
                    <th>商标</th>
                    <th>数量</th>
                    <th>单价</th>
                    <th>金额</th>
                    <th>负责人</th>
                    <th>负责人Email</th>
                    <th>编辑</th>
                </tr>
                <%rows.forEach((row)=>{%>
                <tr>
                    <td><%=row.code%></td>
                    <td><%=row.date.toJSON().slice(0,10)%></td>
                    <td><%=row.goodsCode%></td>
                    <td><%=row.brandName%></td>
                    <td><%=row.num%></td>
                    <td><%=row.price%></td>
                    <td><%=parseInt(row.num)*parseFloat(row.price)%></td>
                    <td><%=row.personName%></td>
                    <td><%=row.email%></td>
                    <td>
                        <input type="button" value="编辑" onclick="btnEdit_click('<%=row.code%>')"/>
                    </td>
                </tr>
                <%});%>
            </table>
        </div>
</section>
<script>
    function window_onload(){
        <%if(order){%>
        <%if(order.code){%>
        document.getElementById('tbxCode').value='<%=order.code%>';
    <%}
    if(order.date){%>
    document.getElementById('tbxDate').value='<%=order.date%>';
    <%}
    if(order.goodsCode){%>
        document.getElementById('tbxGoodsCode').value = '<%=order.goodsCode%>';
    <%}%>
    <%}
    else{%>
        document.getElementById('tbxDate').value = new Date().toJSON().slice(0,10);
        <%}%>
    }
    //用户点击新增按钮,进入订单编辑页面
    function btnNew_click(){
        window.location = '/new/';
    }
    //用户点击检索时
    function btnSearch_click(){
        let data= {};
        data.Code = document.getElementById('tbxCode').value.trim();
        data.Date = document.getElementById('tbxDate').value.trim();
        data.GoodsCode = document.getElementById('tbxGoodsCode').value.trim();
        //如果订单编号，订单日期，还有商品编号为空的话，阻止表单提交
        if(data.Code==''&&data.Date==''&&data.GoodsCode==''){
            document.getElementById('errMsg').innerHTML='必须输入一个检索条件.';
            if(event&&event.preventDefault){
                event.preventDefault();
            }
            else{
                window.event.returnValue = false;

            }
        }
    }
    //用户点击编辑按钮,code为订单编号
    function btnEdit_click(code){
        window.location ='/edit/'+code;
    }
</script>
</body>
</html>